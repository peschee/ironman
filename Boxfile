web1:
    name: mfd-ironman
    shared_writable_dirs:
        - web/img/generated
    document_root: web
    php_version: 5.3.23
    php_extensions:
        - curl
        - gd
        - zip
        - intl
        - json
    after_build:
        - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --prefer-source"
    after_deploy:
        - mv app/config.prod.php app/config.php
        - "rm -f web/img/generated/*"

global:
  env:
    - ENV: production
